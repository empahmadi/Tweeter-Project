<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="parent" styleClass="container, small" stylesheets="@style/error.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ce.ap.client.gui.impl.ErrorControllerImpl">
    <children>
        <Label fx:id="caption" layoutX="50.0" layoutY="498.0" styleClass="caption-s" text="Error occurred in Connection !!! :(" />
        <ImageView fx:id="image" layoutX="50.0" layoutY="98.0" pickOnBounds="true" preserveRatio="true" styleClass="image-s">
            <Image requestedHeight="400" requestedWidth="500" url="${controller.imageAdd}" />
        </ImageView>
      <Button fx:id="back" styleClass="btn-s" layoutX="438.0" layoutY="14.0" mnemonicParsing="false" text="Back" />
    </children>
</Pane>
