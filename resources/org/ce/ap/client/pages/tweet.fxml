<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="tweet" styleClass="tweet-s" stylesheets="@style/tweet.css" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.ce.ap.client.gui.controller.TweetController">
    <children>
        <HBox fx:id="information" styleClass="row1-s">
            <children>
                <Button fx:id="profile" onAction="#click" styleClass="user-icon-s"/>
                <Pane styleClass="user-pane-s">
                    <children>
                        <Button fx:id="name" onAction="#click" styleClass="name" style="-fx-font-size: 15;-fx-pref-height: 30" mnemonicParsing="false" text="Name"/>
                        <Button fx:id="username" onAction="#click" styleClass="name" style="-fx-font-size: 11;-fx-pref-height: 20" layoutY="30.0" mnemonicParsing="false" text="username"/>
                    </children>
                </Pane>
                <Label fx:id="date" styleClass="date-s, light"/>
            </children>
        </HBox>
        <Button fx:id="isRetweet" onAction="#click" layoutX="50" mnemonicParsing="false"/>
        <Label fx:id="textContent" styleClass="content-s, light"/>
        <ImageView fx:id="imageContent" fitHeight="380" fitWidth="250.0" pickOnBounds="true" preserveRatio="true"
                   styleClass="image-s" VBox.vgrow="ALWAYS">
            <Image requestedHeight="430" requestedWidth="380" url="@icons/twitter.png"/>
            <VBox.margin>
                <Insets left="53.0"/>
            </VBox.margin>
        </ImageView>
        <HBox fx:id="caption" styleClass="row4-s, light">
            <children>
                <Pane styleClass="caption-wrapper-s">
                    <Button fx:id="like" onAction="#click" styleClass="btn-l-s" text="Like"/>
                    <Button fx:id="likes" onAction="#click" styleClass="btn-l-s" layoutX="45" text="Likes(12)"/>
                </Pane>
                <Pane styleClass="caption-wrapper-s">
                    <Button fx:id="retweet" onAction="#click"  styleClass="btn-l-s" text="Retweet"/>
                    <Button fx:id="retweets" onAction="#click" styleClass="btn-l-s" layoutX="60" text="Retweets(22)"/>
                </Pane>
                <Pane styleClass="caption-wrapper-s">
                    <Button fx:id="delete" onAction="#click" styleClass="btn-l-s" layoutX="30" text="delete"/>
                </Pane>
            </children>
        </HBox>
    </children>
</VBox>
